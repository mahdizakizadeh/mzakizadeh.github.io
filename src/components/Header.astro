---
import HeaderLink from "./HeaderLink.astro";
import { MY_NAME, NAV_LINKS } from "../consts";
---

<header>
    <nav>
        {
            NAV_LINKS.map((link, i) => (
                <HeaderLink href={link.to} isLast={i + 1 == NAV_LINKS.length}>
                    {link.name}
                </HeaderLink>
            ))
        }
    </nav>
</header>

<style>
    header {
        margin: 0 0 3rem;
        padding: 0 1em;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    header a {
        letter-spacing: 1px;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    nav a {
        padding: 0 0.85rem;
        font-size: 1rem;
        display: inline-block;
        text-decoration: underline;
        color: var(--accent);
        text-transform: uppercase;
    }
    nav a.active {
        font-weight: bolder;
        text-decoration: none;
    }
    .social-links,
    .social-links a {
        display: flex;
    }
    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }
</style>
